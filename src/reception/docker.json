{
  "nom": "reception",
  "version": "2024.4.1",
  "securite": "1.public",
  "dependances": [
    {
      "name": "reception",
      "image": "docker.maple.maceroc.com:5000/millegrilles_reception_python:2024.4.1",
      "certificat": {
        "roles": [ "reception" ],
        "exchanges": [ "1.public" ],
        "dns": { "localhost": true, "hostnames": [ "reception" ], "domain": true }
      },
      "env": {
        "MQ_HOSTNAME": "${MQ_HOSTNAME}",
        "MQ_PORT": "${MQ_PORT}",
        "REDIS_HOSTNAME": "redis",
        "REDIS_PORT": "6379",
        "REDIS_PASSWORD_PATH": "/run/secrets/passwd.redis.txt",
        "CERT_PEM": "/run/secrets/cert.pem",
        "KEY_PEM": "/run/secrets/key.pem",
        "CA_PEM": "/run/secrets/millegrille.cert.pem",
        "WEB_PORT": "1443"
      },
      "mounts": [
        {"source": "millegrilles-staging", "target":  "/var/opt/millegrilles/staging", "type": "volume"}
      ],
      "constraints": [ "node.labels.millegrilles.reception == true" ],
      "configs": [
        {
          "name": "pki.reception",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.reception",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {
          "target": "millegrille_net",
          "aliases": [ "reception" ]
        },
        {"target": "bridge"}
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 125000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 5000000000,
        "max_attempts": 100
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ],
  "nginx": { "conf": ["reception.app.location"] }
}