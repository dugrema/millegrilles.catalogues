{
  "nom": "web_scraper",
  "version": "2025.2.7",
  "securite": "1.public",
  "securityLevels": ["1.public", "2.prive", "3.protege"],
  "dependances": [
    {
      "name": "web_scraper",
      "image": "docker.maple.maceroc.com:5000/millegrilles_web_scraper_python:2025.2.4",
      "args": ["-m", "millegrilles_webscraper"],
      "certificat": {
        "roles": ["web_scraper"],
        "exchanges": ["1.public"]
      },
      "env": {
        "MQ_HOSTNAME": "${MQ_HOSTNAME}",
        "MQ_PORT": "${MQ_PORT}",
        "REDIS_HOSTNAME": "redis",
        "REDIS_PORT": "6379",
        "REDIS_PASSWORD_PATH": "/run/secrets/passwd.redis.txt",
        "CERT_PATH": "/run/secrets/cert.pem",
        "KEY_PATH": "/run/secrets/key.pem",
        "CA_PATH": "/run/secrets/millegrille.cert.pem"
      },
      "constraints": ["node.labels.millegrilles.web_scraper == true"],
      "mounts": [
        {"source": "millegrilles-webscraper", "target":  "/var/opt/millegrilles/web_scraper", "type": "volume"}
      ],
      "configs": [
        {
          "name": "pki.web_scraper",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.web_scraper",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {"target": "millegrille_net"},
        {"target": "bridge"}
      ],
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 200000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}
