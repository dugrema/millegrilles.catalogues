# Application React MilleSens

# https://gkedge.gitbooks.io/react-router-in-the-real/content/nginx.html

# --- START REMOVE FOR DEV ---
# Code resources with hash in name
location /millesens/assets/ {{
  root /usr/share/nginx/html/applications;
  try_files $uri =404;
  expires 1y;
  access_log off;
  add_header Cache-Control "public, immutable";
  include /etc/nginx/conf.d/component_gzip.include;
}}

# Image resources
location ~/millesens/.*\.(?:png|svg)$ {{
  root /usr/share/nginx/html/applications;
  try_files $uri =404;
  expires 15m;
  access_log off;
  add_header Cache-Control "public";
}}
# --- END REMOVE FOR DEV ---

location /millesens {{
  root /usr/share/nginx/html/applications;
  add_header 'Cache-Control' 'public,max-age=300';
  include /etc/nginx/conf.d/component_gzip.include;
  try_files $uri $uri/ /millesens/index.html;

