{
  "nom": "solr",
  "version": "2025.3.16",
  "securite": "3.protege",
  "securityLevels": ["3.protege", "4.secure"],
  "dependances": [
    {
      "name": "solr_zookeeper",
      "image": "zookeeper:3.8",
      "hostname": "solrzookeeper",
      "mounts": [
        {
          "source": "solr-zookeeper-data",
          "target": "/data",
          "type": "volume"
        },{
          "source": "solr-zookeeper-datalog",
          "target": "/datalog",
          "type": "volume"
        }
      ],
      "constraints": [
        "node.labels.millegrilles.solr == true"
      ],
      "networks": [
        {
          "target": "millegrille_net",
          "aliases": ["solrzookeeper"]
        }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 500000000,
        "mem_limit": 300000000
      },
      "restart_policy": {
        "condition": "any",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    },
    {
      "name": "solr_server",
      "image": "solr:9.2",
      "hostname": "solr",
      "args": ["solr-foreground", "-c", "-h", "solr", "-z", "solrzookeeper:2181"],
      "env": {
        "SOLR_MODULES": "extraction"
      },
      "mounts": [
        {
          "source": "solr-data",
          "target": "/var/solr",
          "type": "volume"
        }
      ],
      "constraints": [
        "node.labels.millegrilles.solr == true"
      ],
      "networks": [
        { "target": "millegrille_net", "aliases": ["solr"] }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 2000000000,
        "mem_limit": 2500000000
      },
      "restart_policy": {
        "condition": "any",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    },
    {
      "name": "solr_relai",
      "image": "docker.maple.maceroc.com:5000/millegrilles_midcompte_python:2025.3.105",
      "args": ["-m", "millegrilles_solr"],
      "hostname": "solrrelai",
      "certificat": {
        "nom": "solr_relai",
        "roles": ["solrrelai"],
        "exchanges": ["4.secure","3.protege","2.prive","1.public"]
      },
      "env": {
        "CA_PATH": "/run/secrets/millegrille.cert.pem",
        "CERT_PATH": "/run/secrets/cert.pem",
        "KEY_PATH": "/run/secrets/key.pem",
        "MQ_HOSTNAME": "${MQ_HOSTNAME}",
        "MQ_PORT": "${MQ_PORT}",
        "REDIS_HOSTNAME": "redis",
        "REDIS_PORT": "6379",
        "REDIS_PASSWORD_PATH": "/run/secrets/passwd.redis.txt",
        "SOLR_URL": "http://solr:8983"
      },
      "constraints": [
        "node.labels.millegrilles.solr == true"
      ],
      "configs": [
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        },
        {
          "name": "pki.solr_relai",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.solr_relai",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {
          "target": "millegrille_net"
        }
      ],
      "labels": {
        "millegrille": "${IDMG}"
      },
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 100000000
      },
      "restart_policy": {
        "condition": "any",
        "delay": 5000000000,
        "max_attempts": 1000
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}
