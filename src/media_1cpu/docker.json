{
  "nom": "media_1cpu",
  "version": "2024.9.3",
  "securite": "3.protege",
  "securityLevels": ["3.protege", "4.secure"],
  "dependances": [
    {
      "name": "media_1cpu",
      "image": "docker.maple.maceroc.com:5000/millegrilles_media_python:2024.9.20",
      "certificat": {
        "roles": ["media"],
        "exchanges": ["4.secure", "3.protege", "2.prive", "1.public"]
      },
      "env": {
        "CA_PATH": "/run/secrets/millegrille.cert.pem",
        "CERT_PATH": "/run/secrets/cert.pem",
        "KEY_PATH": "/run/secrets/key.pem",
        "MQ_HOSTNAME": "${MQ_HOSTNAME}",
        "MQ_PORT": "${MQ_PORT}",
        "DIR_STAGING": "/var/opt/millegrilles/staging/media",
        "REDIS_HOSTNAME": "redis",
        "REDIS_PORT": "6379",
        "REDIS_PASSWORD_PATH": "/run/secrets/passwd.redis.txt"
      },
      "constraints": ["node.labels.millegrilles.media == true"],
      "mounts": [
        {"source": "millegrilles-staging", "target":  "/var/opt/millegrilles/staging", "type": "volume"}
      ],
      "configs": [
        {
          "name": "pki.media_1cpu",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.media_1cpu",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {"target": "millegrille_net"},
        {"target": "bridge"}
      ],
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 1000000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 5
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}
