{
  "nom": "ai_backend",
  "version": "2025.4.39",
  "description": {
    "en": "AI large language model support (back-end)",
    "fr": "IA support pour modeles de language (back-end)"
  },
  "securite": "3.protege",
  "securityLevels": ["3.protege", "4.secure"],
  "dependances": [
    {
      "name": "ai_backend",
      "image": "registry.millegrilles.com/millegrilles/ai_rust:2025.4.39",
      "certificat": {
        "roles": ["ai", "llm"],
        "domaines": ["AiLanguage"],
        "exchanges": ["4.secure", "3.protege", "2.prive", "1.public"]
      },
      "env": {
        "MG_MQ_HOST": "${MQ_HOSTNAME}",
        "MG_MQ_PORT": "${MQ_PORT}",
        "CERTFILE": "/run/secrets/cert.pem",
        "KEYFILE": "/run/secrets/key.pem",
        "CAFILE": "/run/secrets/millegrille.cert.pem",
        "MG_MONGO_HOST": "mongo",
        "RUST_LOG": "warn,millegrilles_ai=info"
      },
      "constraints": [
        "node.labels.millegrilles.ailanguage == true"
      ],
      "mounts": [{"source": "millegrilles-domain-archives", "target": "/var/opt/millegrilles/archives", "type": "volume"}],
      "configs": [
        {
          "name": "pki.ai_backend",
          "current": "cert",
          "filename": "/run/secrets/cert.pem"
        },
        {
          "name": "pki.millegrille",
          "filename": "/run/secrets/millegrille.cert.pem"
        }
      ],
      "secrets": [
        {
          "name": "pki.ai_backend",
          "current": "key",
          "filename": "key.pem"
        },
        {
          "name": "passwd.redis",
          "current": "password",
          "filename": "passwd.redis.txt"
        }
      ],
      "networks": [
        {
          "target": "millegrille_net"
        }
      ],
      "resources": {
        "cpu_limit": 1000000000,
        "mem_limit": 250000000
      },
      "restart_policy": {
        "condition": "on-failure",
        "delay": 60000000000,
        "max_attempts": 2
      },
      "mode": {
        "mode": "replicated",
        "replicas": 1
      }
    }
  ]
}